import Navigation from "../components/ui/Navigation.astro";
import "../styles/global.css";


---

<!doctype html>
<html lang="es">
	<Head>

	</Head>
	<body>
		<Navigation />
		<WhatsappButton />
		<slot />

		<Footer />

	</body>
</html>

<script>
	// @ts-nocheck
	import AOS from "aos";
	import 'aos/dist/aos.css';

	AOS.init();
</script>

<style is:global>
	html,
	body {
		margin: 0;
		width: 100%;
		height: 100%;
	}

	[x-cloak] {
	  display: none !important;
	}
	/* Estilo para el scrollbar global */
  
	html {
	  scroll-behavior: smooth;
	  scrollbar-width: thin; /* Firefox */
	  scrollbar-color: #002E90 #f3f4f6; /* Colores en Firefox */
	}
  
	html::-webkit-scrollbar {
	  width: 8px; /* Ancho de la barra */
	  height: 8px; /* Alto para barras horizontales */
	}
  
	html::-webkit-scrollbar-track {
	  background: #f3f4f6; /* Fondo del track */
	}
  
	html::-webkit-scrollbar-thumb {
	  background-color: #002E90; /* Color del thumb */
	  border-radius: 4px; /* Bordes redondeados */
	  border: 2px solid #f3f4f6; /* Margen interno para que el thumb no ocupe todo */
	}
  
	html::-webkit-scrollbar-thumb:hover {
	  background-color: #002E90; /* Cambia el color al pasar el cursor */
	}
  </style>
