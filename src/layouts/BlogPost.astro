---
import type { CollectionEntry } from 'astro:content';

import Layout from "@/layouts/Layout.astro"


type Props = CollectionEntry<'blog'>['data'];

const { title, description, pubDate, updatedDate, heroImage } = Astro.props;
---

<Layout>
  <section class="bg-gray-50 pt-24">
    <div class="mx-auto max-w-screen-xl px-4 py-16 lg:py-12">
      <!-- Imagen destacada -->
      {heroImage && (
        <div class="mb-8">
          <img
            src={heroImage}
            alt={title}
            class="rounded-lg w-full object-cover h-64 md:h-96"
          />
        </div>
      )}

      <!-- TÃ­tulo y detalles del post -->
      <div class="text-center mb-12">
        <h1 class="text-2xl md:text-4xl font-bold mb-4 text-gray-900 font-heading capitalize"> 
		      	{title}
        </h1>
      </div>

      <!-- Contenido del post -->
      <article class="max-w-none mx-auto font-body">
        <slot />
        
      </article>
    </div>
  </section>
</Layout>
