---
import Layout from "@/layouts/Layout.astro";
import { SITE_TITLE, SITE_DESCRIPTION } from "../../consts";
import { getCollection } from "astro:content";
import Newsletter from "@/sections//Newsletter.astro";

const posts = (await getCollection("blog")).sort(
  (a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf()
);
---

<Layout title="Noticias" description={SITE_DESCRIPTION}>
  <main class="bg-gradient-to-br from-main to-second">
    <section class="pt-24 pb-16">
      <div class="py-10">
        <h1
          class="text-3xl font-bold tracking-tight text-center text-white font-heading sm:text-4xl py-5"
        >
          Últimos Artículos
        </h1>
        <p
          class="text-2xl text-center font-body font-medium tracking-tight text-white"
        >
          Explora nuestros ultimas noticias
        </p>
      </div>
      <ul
        class="grid gap-8 max-w-6xl mx-auto px-4 sm:grid-cols-2 lg:grid-cols-3"
      >
        {
          posts.map((post) => (
            <li class="bg-white rounded-lg shadow-md overflow-hidden hover:shadow-xl transition-shadow duration-300">
              <a href={`/blog/${post.id}/`} class="block h-full">
                <img
                  width={720}
                  height={360}
                  src={post.data.heroImage}
                  alt={post.data.title}
                  class="w-full h-48 object-cover"
                />
                <div class="p-6">
                  <h4 class="text-xl font-semibold text-gray-900 font-heading mb-3">
                    {post.data.title}
                  </h4>
                  <p class="text-sm font-body text-gray-600  mb-4">
                    {post.data.pubDate.toLocaleDateString()}
                  </p>
                  <p class="text-gray-700 font-body line-clamp-4 text-xs">
                    {post.data.description || "Descripción del artículo..."}
                  </p>
                </div>
              </a>
            </li>
          ))
        }
      </ul>
    </section>
  </main>

  <Newsletter />
</Layout>
