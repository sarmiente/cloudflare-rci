---
import Logo from "../../assets/Logo_RCI.svg";

const navigationMenu = {
  links: [
    { href: "/nosotros", text: "Nosotros" },
    { href: "/servicios", text: "Servicios" },
    { href: "/blog", text: "Noticias" },
    { href: "/contacto", text: "Contacto" },
  ],
};
---

<nav
  x-data="{ mobileMenuIsOpen: false }"
  x-on:click.away="mobileMenuIsOpen = false"
  class="mx-auto flex items-center justify-between p-2 fixed z-50 bg-white w-full shadow-2xs"
  aria-label="RCI menu"
>
  <!-- Brand Logo -->
  <a href="/" class="hover:cursor-pointer">
    <Logo width={180} height={70} />
  </a>

  <!-- Desktop Menu -->
  <ul class="hidden items-center gap-4 md:flex">
    {
      navigationMenu.links.map((item) => (
        <li class="hover:-translate-y-1 transition">
          <a
            href={item.href}
            class="font-body text-lg font-light  underline-offset-2 hover:text-main focus:outline-hidden focus:underline "
            aria-current="page"
          >
            {item.text}
          </a>
        </li>
      ))
    }
  </ul>


  <div class="hidden md:flex gap-2">
    <button class="bg-main text-lg hover:bg-third p-2 font-body font-medium text-white rounded-lg cursor-pointer hover:scale-105 transition">
      <a href="https://api.whatsapp.com/send/?phone=573136775143&text=Hola%2C%20estoy%20interesado%20en%20sus%20servicios%20de%20seguridad" target="_blank" >Cotizar Servicio</a>
    </button>
  </div>

  <!-- Mobile Menu Button -->
  <button
    x-on:click="mobileMenuIsOpen = !mobileMenuIsOpen"
    x-bind:aria-expanded="mobileMenuIsOpen"
    x-bind:class="mobileMenuIsOpen ? 'fixed top-6 right-6 z-20' : null"
    type="button"
    class="flex md:hidden"
    aria-label="mobile menu"
    aria-controls="mobileMenu"
  >
    <svg
      x-cloak
      x-show="!mobileMenuIsOpen"
      xmlns="http://www.w3.org/2000/svg"
      fill="none"
      aria-hidden="true"
      viewBox="0 0 24 24"
      stroke-width="2"
      stroke="currentColor"
      class="size-6"
    >
      <path
        stroke-linecap="round"
        stroke-linejoin="round"
        d="M3.75 6.75h16.5M3.75 12h16.5m-16.5 5.25h16.5"></path>
    </svg>
    <svg
      x-cloak
      x-show="mobileMenuIsOpen"
      xmlns="http://www.w3.org/2000/svg"
      fill="none"
      aria-hidden="true"
      viewBox="0 0 24 24"
      stroke-width="2"
      stroke="currentColor"
      class="size-6"
    >
      <path
        stroke-linecap="round"
        stroke-linejoin="round"
        d="M6 18 18 6M6 6l12 12"></path>
    </svg>
  </button>


  <!-- Mobile Menu -->
  <ul
    x-cloak
    x-show="mobileMenuIsOpen"
    x-transition:enter="transition motion-reduce:transition-none ease-out duration-300"
    x-transition:enter-start="-translate-y-full"
    x-transition:enter-end="translate-y-0"
    x-transition:leave="transition motion-reduce:transition-none ease-out duration-300"
    x-transition:leave-start="translate-y-0"
    x-transition:leave-end="-translate-y-full"
    id="mobileMenu"
    class="fixed h-screen overflow-y-auto inset-x-0 top-0 flex flex-col  bg-white divide-outline rounded-b-radius gap-2 px-6 pb-6 pt-[15%] text-center md:hidden z-10 transition"
  >
<div class="flex justify-center">
          <a href="/" class="hover:cursor-pointer hover:scale-105 transition">
            <Logo width={200} height={100} />
          </a>
        </div>
   <div>
     {
      navigationMenu.links.map((item) => (
        <li class="py-6">
          <a
            href={item.href}
            class="w-full text-3xl font-body uppercase focus:underline"
            aria-current="page"
          >
            {item.text}
          </a>
        </li>
      ))
    }
   </div>
    <button
      class="bg-main hover:bg-main/80 px-4 text-lg py-2 text-white rounded-lg cursor-pointer"
    >
      <a href="https://api.whatsapp.com/send/?phone=573136775143&text=Hola%2C%20estoy%20interesado%20en%20sus%20servicios%20de%20seguridad" target="_blank" class="font-heading">Cotizar ahora</a>
      
    </button>
  </ul>

</nav>
